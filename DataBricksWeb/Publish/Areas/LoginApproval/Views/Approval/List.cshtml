@model DataBricksWeb.Areas.LoginApproval.Model.ApprovalModel
@{
    ViewBag.Title = "List";
}


<style>
    #tblUser {
        font-family: Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

        #tblUser td, #customers th {
            border: 1px solid #ddd;
            padding: 8px;
        }

        #tblUser tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        #tblUser tr:hover {
            background-color: #ddd;
        }

        #tblUser th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #3c8dbc;
            color: white;
        }
</style>



<section class="content-header">
    <h1>
        Approval List
    </h1>
    <ol class="breadcrumb">
        <li><a href="/dashboard/landingpage"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Approval List</li>
    </ol>
</section>
<div id="newloader">
    <section class="content">
        <br />
        <br />
        <br />
        <br />
        <br />
        <div class="row">
            <div class="col-md-4">
            </div>
            <div class="col-md-4">
                <img style="width: 30%;margin-left: 100px;margin-top: 55px;" src="~/NewAdmin/dist/img/loading-waiting.gif" class="img-circle" alt="User Image">
            </div>
            <div class="col-md-4">
            </div>
        </div>
    </section>
</div>
<div id="tablehide" style="display:none;">
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    <div class="box-header with-border">


                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table class="table table-bordered" id="tblUser">
                            <thead>
                                <tr>
                                    <th>Company Name</th>
                                    <th>Full Name</th>
                                    <th>Phone</th>
                                    <th>Email</th>
                                    <th>Role</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Users != null && Model.Users.Count > 0)
                                {
                                    foreach (var user in Model.Users)
                                    {
                                        <tr>
                                            <td>@user.CompanyName</td>
                                            <td>@user.FullName</td>
                                            <td>@user.PhoneNumber</td>
                                            <td>@user.EmailId</td>
                                            <td>@user.RoleName</td>
                                            <td>@(user.IsActive == true ? "Active" : "Inactive")</td>
                                            <td style="text-align:center;">
                                                <a href="#" class="lnkUserApprove" data-id="@user.Id"><p class="fa fa-pencil"></p></a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7">No Data Found</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.box-body -->

                </div>

            </div>

        </div>


    </section>
</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/CustomScript.js"></script>
<script src="~/Scripts/bootstrap.js"></script>
<script>

    $(document).on("click",".lnkUserApprove",function () {
        fnRedirecttoEdit($(this).attr("data-id"));
    });

    function fnRedirecttoEdit(id) {
        window.location.href = "@Url.Action("Edit","Approval",new { area = "LoginApproval"})?id=" + id;
    };
</script>
<script src="~/NewAdmin/bower_components/jquery/dist/jquery.min.js"></script>
<script>
    window.setInterval('refresh()', 1000);
    function refresh() {
        document.getElementById("newloader").style.display = 'none';
        document.getElementById("tablehide").style.display = 'block';
    }
    
    var v = document.getElementById("LoginApprovalsnew");
    v.className += "tabcolor";
</script>