@model DataBricksWeb.Areas.Customer.Model.CustomerModel
@{
    ViewBag.Title = "List";
}
<style>
    #example1 {
        font-family: Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

        #example1 td, #customers th {
            border: 1px solid #ddd;
            padding: 8px;
        }

        #example1 tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        #example1 tr:hover {
            background-color: #ddd;
        }

        #example1 th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #3c8dbc;
            color: white;
        }
</style>
<section class="content-header">
    <h1>
        Customer List

    </h1>
    <ol class="breadcrumb">
        <li><a href="/dashboard/landingpage"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Customer List</li>
    </ol>
</section>
<div id="newloader">
    <section class="content">
        <br />
        <br />
        <br />
        <br />
        <br />
        <div class="row">
            <div class="col-md-4">
            </div>
            <div class="col-md-4">
                <img style="width: 30%;margin-left: 100px;margin-top: 55px;" src="~/NewAdmin/dist/img/loading-waiting.gif" class="img-circle" alt="User Image">
            </div>
            <div class="col-md-4">
            </div>
        </div>
    </section>
</div>
<div id="tablehide" style="display:none;">
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box">                    
                    <!-- /.box-header -->
                    <div class="box-body">
                        <div style="overflow: auto;">
                            <table class="table table-bordered" id="example1">
                                <thead>
                                    <tr>
                                        <th>S.No.</th>
                                        <th>Name</th>
                                        <th>Branch</th>
                                        <th>Location</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Customers != null && Model.Customers.Count > 0)
                                    {
                                        int i = 1;
                                        foreach (var customer in Model.Customers)
                                        {
                                            <tr>
                                                <td style="text-align:center;">@i</td>
                                                <td>@customer.CustomerName</td>
                                                <td>@customer.Branch</td>
                                                <td>@customer.CityName</td>
                                                <td style="text-align:center;">
                                                    <a href="#" class="lnkCustomerEdit" data-id="@customer.Id"><p class="fa fa-eye"><p></a>
                                                </td>
                                            </tr>
                                            i++;
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="5">No Data Found</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- /.box-body -->

                </div>

            </div>

        </div>


    </section>
</div>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/CustomScript.js"></script>
<script src="~/Scripts/bootstrap.js"></script>
<script>
   

    $(document).on("click",".lnkCustomerEdit",function () {
        fnRedirecttoEdit($(this).attr("data-id"));
    });

    function fnRedirecttoEdit(id) {
        window.location.href = "@Url.Action("Details","Customer",new { area = "Report"})?id=" + id;
    };
</script>

<script>
    window.setInterval('refresh()', 1000);
    function refresh() {
        document.getElementById("newloader").style.display = 'none';
        document.getElementById("tablehide").style.display = 'block';
    }

    var v = document.getElementById("Customersnew");
    v.className += "tabcolor";
    
</script>

