@model DataBricksWeb.Database.Poc
@{
    ViewBag.Title = "Edit";
}

<style>
    #tblModule {
        font-family: Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

        #tblModule td, #customers th {
            border: 1px solid #ddd;
            padding: 8px;
        }

        #tblModule tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        #tblModule tr:hover {
            background-color: #ddd;
        }

        #tblModule th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #3c8dbc;
            color: white;
        }
</style>
<section class="content-header">
    <h1>
        Poc
    </h1>
    <ol class="breadcrumb">
        <li><a href="/dashboard/landingpage"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="/PocApproval/list">Poc List</a></li>
        <li class="active">Poc</li>
    </ol>
</section>
<div id="newloader">
    <section class="content">
        <br />
        <br />
        <br />
        <br />
        <br />
        <div class="row">
            <div class="col-md-4">
            </div>
            <div class="col-md-4">
                <img style="width: 30%;margin-left: 100px;margin-top: 55px;" src="~/NewAdmin/dist/img/loading-waiting.gif" class="img-circle" alt="User Image">
            </div>
            <div class="col-md-4">
            </div>
        </div>
    </section>
</div>
<!-- Main content -->
<div id="tablehide" style="display:none;">
    <section class="content">

        <!-- SELECT2 EXAMPLE -->
        <div class="box box-default">

            <!-- /.box-header -->
            <form method="post" action="@Url.Action("Edit","ManagePoc",new { area = "Poc"})" enctype="multipart/form-data" id="frmPoc">
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Customer Name <span style="color:red;">*</span></label>
                                <div>
                                    <span>@Model.CustomerName</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Date<span style="color:red;">*</span></label>
                                <div>
                                    <span>@Model.POCDate</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label>Lead<span style="color:red;">*</span></label>
                            <div>
                                <span>@Model.LeadName</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Product Name<span style="color:red;">*</span></label>
                                <div>
                                    <span>@Model.ProductName</span>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <label>Qualified Domain Name<span style="color:red;">*</span></label>
                            <div>
                                <span>@Model.QualifiedDomainName</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label>Public IP<span style="color:red;">*</span></label>
                            <div>
                                <span>@Model.PublicIp</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label>Description</label>
                            <div>
                                <span>@Model.Description</span>
                            </div>
                        </div>
                    </div>

                    <br />
                    <div class="row">
                        <div class="col-md-12">
                            <table class="table table-bordered table-responsive" id="tblModule">
                                <thead>
                                    <tr>
                                        <th>Module</th>
                                        <th>Count</th>
                                        <th>From Date</th>
                                        <th>To Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        List<DataBricksWeb.Database.PocModule> modules = TempData["PocModule"] as List<DataBricksWeb.Database.PocModule>;
                                    }
                                    @if (modules != null && modules.Count > 0)
                                    {
                                        int i = 0;
                                        foreach (var module in modules)
                                        {
                                            <tr>
                                                <td>
                                                    @module.ModuleName
                                                </td>
                                                <td>
                                                    @module.ModuleCount
                                                </td>
                                                <td>
                                                    @module.FromDate.ToAppFormat()
                                                </td>
                                                <td>
                                                    @module.ToDate.ToAppFormat()
                                                </td>
                                            </tr>
                                            i++;
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>


                </div>



                <div class="box-footer">
                    <div class="col-lg-12 p-t-20 text-center">
                        <button type="button" onclick="pageloade();" style="background-color: #dc3545; border-color: #dc3545;margin-left: 10px;" class="btn btn-primary float-center">Cancel</button>
                    </div>
                </div>
            </form>
        </div>


    </section>

</div>



<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/CustomScript.js"></script>
<script src="~/Scripts/bootstrap.js"></script>
<script>
    function pageloade() {
        window.location = "/poc/list";
    }
</script>
<script>
    window.setInterval('refresh()', 1000);
    function refresh() {
        document.getElementById("newloader").style.display = 'none';
        document.getElementById("tablehide").style.display = 'block';
    }
    var v = document.getElementById("pocnew");
    v.className += "tabcolor";
</script>
